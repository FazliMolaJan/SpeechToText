<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/shortcut_background_border" /> <!-- border color -->
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:top="1dp"
        android:right="0.5dp"
        android:left="0.5dp"
        >   <!-- adjust borders width here -->
        <shape android:shape="rectangle">
            <solid android:color="@color/shortcut_background" />  <!-- background color -->
        </shape>
    </item>
</layer-list>